# Application Settings
# These settings control the overall application configuration
VITE_APP_NAME=HandyWriterz
VITE_APP_URL=http://localhost:5173
VITE_APP_DESCRIPTION=Professional academic writing services

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Clerk Authentication
VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
VITE_CLERK_SECRET_KEY=your_clerk_secret_key

# Authentication (Required)
# These settings control user authentication
VITE_CLERK_SIGN_IN_URL=/sign-in
VITE_CLERK_SIGN_UP_URL=/sign-up
VITE_CLERK_AFTER_SIGN_IN_URL=/dashboard
VITE_CLERK_AFTER_SIGN_UP_URL=/onboarding
VITE_APPKIT_APP_ID=
VITE_SOLANA_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/Uel0R8JGCFTjzALHVCAjQskxV6BkjlmD  # Optional: Custom Solana RPC URL
VITE_REOWN_PROJECT_ID=

# Public Access Features (Required)
# These settings control public access to content without requiring login
VITE_ENABLE_PUBLIC_ACCESS=true          # Allow public to view content
VITE_ENABLE_ANONYMOUS_LIKES=true        # Allow public to like content without login
VITE_ENABLE_ANONYMOUS_SHARES=true       # Allow public to share content without login
VITE_ENABLE_SOCIAL_SHARING=true         # Enable social media sharing buttons
VITE_ENABLE_AUTHENTICATED_COMMENTS=true  # Only allow authenticated users to comment
VITE_ENABLE_PUBLIC_LIKES=true
VITE_ENABLE_PUBLIC_SHARES=true
VITE_ENABLE_COMMENTS=true

# Performance Optimization
# Settings to ensure fast page loading and minimal waiting time
VITE_ENABLE_QUERY_CACHING=true          # Enable caching of database queries
VITE_CACHE_DURATION=3600                 # Cache duration in seconds
VITE_MAX_CONCURRENT_REQUESTS=20         # Limit concurrent API requests
VITE_ENABLE_REALTIME=true              # Enable real-time updates
VITE_ENABLE_CDN=true
VITE_ENABLE_COMPRESSION=true

# Content Management
# File handling and processing settings
VITE_STORAGE_BUCKET=media
VITE_ALLOWED_FILE_TYPES=".pdf,.doc,.docx,.txt"
VITE_MAX_FILE_SIZE=5242880 # 5MB in bytes
VITE_MAX_PROCESSING_TIME=1200000       # 20 minutes in milliseconds

# Admin Features
# Settings for admin dashboard and management capabilities
VITE_ADMIN_EMAIL=admin@handywriterz.com
VITE_ENABLE_ADMIN_DASHBOARD=true       # Enable admin dashboard access
VITE_ENABLE_USER_MANAGEMENT=true       # Allow admin to manage users
VITE_ENABLE_CONTENT_MANAGEMENT=true    # Allow admin to manage content
VITE_ENABLE_ROLE_MANAGEMENT=true       # Allow admin to manage user roles

# API Configuration
# These settings control API requests and responses
VITE_API_URL=http://localhost:3000
VITE_API_TIMEOUT=30000                 # API timeout in milliseconds
VITE_RETRY_ATTEMPTS=3                  # Number of retry attempts for failed requests

# Analytics
# Settings for tracking user engagement and content performance
VITE_ENABLE_ANALYTICS=true             # Enable analytics tracking
VITE_TRACK_PUBLIC_INTERACTIONS=true    # Track anonymous interactions
VITE_TRACK_USER_ENGAGEMENT=true        # Track authenticated user engagement
VITE_ENABLE_MAGIC_LINK=true
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_REQUIRE_EMAIL_CONFIRMATION=true

# Optional Integrations
# These settings control integrations with third-party services
VITE_COINBASE_COMMERCE_API_KEY=your-coinbase-key
VITE_COINBASE_PUBLIC_KEY=your-coinbase-public-key
VITE_COINBASE_COMMERCE_WEBHOOK_SECRET=your-webhook-secret
VITE_PUBLIC_ONCHAINKIT_API_KEY=your-onchainkit-key
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id
VITE_PAYPAL_CURRENCY=GBP

# Service Configuration
# These settings control service-specific configurations
VITE_TURNITIN_MAX_FILE_SIZE=20971520  # 20MB in bytes
VITE_TURNITIN_ALLOWED_TYPES='application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document'
VITE_ENABLE_TURNITIN=true             # Enable Turnitin integration
VITE_ENABLE_TELEGRAM=true             # Enable Telegram notifications
VITE_TELEGRAM_BOT_TOKEN=your-bot-token
VITE_TELEGRAM_CHANNEL_ID=your-channel-id

# Communication
# These settings control email and notification configurations
VITE_SMTP_FROM=noreply@handywriterz.com
VITE_SMTP_HOST=smtp.example.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=your_smtp_user
VITE_SMTP_PASS=your_smtp_password
VITE_FROM_EMAIL=noreply@example.com

# Payment Processing
# These settings control payment gateway configurations
VITE_STRIPE_PUBLIC_KEY=your-stripe-key
VITE_TURNITIN_CHECK_PRICE=500        # Price in cents

# URLs and Routing
# These settings control URL routing and redirects
VITE_PAYMENT_SUCCESS_URL=http://localhost:5174/payment/success
VITE_PAYMENT_CANCEL_URL=http://localhost:5174/payment/cancel
VITE_DASHBOARD_URL=http://localhost:5174/dashboard
VITE_ADMIN_DASHBOARD_URL=http://localhost:5174/admin

# Note: This is an example configuration file. Do not store sensitive values here.
# Create a .env.local file for local development with your actual values.
# Never commit .env.local or any file containing real credentials to version control.

# Feature Flags
VITE_ENABLE_LOGGING=true
VITE_ENABLE_ERROR_TRACKING=true

# Security
VITE_ENABLE_2FA=true
VITE_SESSION_TIMEOUT=3600 # 1 hour in seconds
VITE_MAX_LOGIN_ATTEMPTS=5

# API Rate Limiting
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=3600 # 1 hour in seconds

# Cache Configuration
VITE_CACHE_TTL=300 # 5 minutes in seconds
VITE_ENABLE_CACHE=true

# Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_MONITORING=true
VITE_MONITORING_SAMPLE_RATE=0.1

# Development Tools
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_DEBUG_LOGGING=true
VITE_ENABLE_TEST_MODE=false
